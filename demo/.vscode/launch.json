    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 9229,
            "address": "localhost",
            "cwd": "${workspaceFolder}",
            "remoteRoot": null,
            "smartStep": true,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\src\\index.js",
            "restart": true,
            "args": [
                "run-script",
                "start"
            ]
        }
    ]
}